{
  "name": "sroloc",
  "version": "v1.0.0",
  "description": "Arcade game developed with Phaser JS. The absurd adventures of Sroloc, a multicolored rocket who's whole purpose is to pass through colored doors infinitely...",
  "main": "server.js",
  "engines": {
    "node": ">=14"
  },
  "scripts": {
    "start": "node server.js",
    "start-dev": "nodemon server.js",
    "build": "clear && webpack --config webpack.config.js",
    "watch": "clear && webpack --watch --config webpack.config.js",
    "prettify": "npx prettier --write .",
    "compile-dev": "npm run prettify && npm run build && npm start",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/4tydev/sroloc.git"
  },
  "author": "Mariano Hurtado de Mendoza (mhurtado / 4tydev)",
  "license": "GPL-3.0-or-later",
  "bugs": {
    "url": "https://github.com/4tydev/sroloc/issues"
  },
  "homepage": "https://github.com/4tydev/sroloc#readme",
  "dependencies": {
    "express": "^4.17.1",
    "phaser": "^3.55.2"
  },
  "devDependencies": {
    "nodemon": "^2.0.13",
    "prettier": "2.4.1",
    "webpack": "^5.58.0",
    "webpack-cli": "^4.9.0"
  }
}
